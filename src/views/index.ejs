<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NodejsBasic</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div>
      <h1>List user:</h1>

      <table id="customers">
        <thead>
          <th>ID</th>
          <th>FirstName</th>
          <th>LastName</th>
          <th>Actions</th>
        </thead>
        <tbody>
          <% for(let i = 0;i < dataUser.length; i++) { %>
          <tr>
            <td><%= dataUser[i].id %></td>
            <td><%= dataUser[i].firstName %></td>
            <td><%= dataUser[i].lastName %></td>
            <td>
              <div class="btn-edit">
                <button type="submit">
                  <a href="/detail/user/<%= dataUser[i].id %>" target="_blank"
                    >Details</a
                  >
                </button>
                <form action="/edit-user/<%= dataUser[i].id %>" method="get">
                  <button type="submit">Edit</button>
                </form>

                <form action="/delete-user" method="post">
                  <input
                    type="text"
                    hidden
                    value="<%= dataUser[i].id %>"
                    name="userId"
                  />
                  <button type="submit">Delete</button>
                </form>
              </div>
            </td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>

    <div class="form">
      <h3>Create a new user</h3>
      <form action="/create-new-user" method="post">
        <div>
          <label for="">First Name:</label>
          <input type="text" name="firstName" />
        </div>
        <div>
          <label for="">Last Name:</label>
          <input type="text" name="lastName" />
        </div>
        <div>
          <label for="">Emai:</label>
          <input type="email" name="email" />
        </div>
        <div>
          <label for="">Address:</label>
          <input type="text" name="address" />
        </div>

        <div>
          <button type="submit" class="btn">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
